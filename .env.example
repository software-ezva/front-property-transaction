# .env.example
# Copy this file to .env.local and fill in the real values

# --- Auth0 Configuration ---
# The secret used to sign the session cookie (must be long and secure, min 32 chars)
AUTH0_SECRET=use_a_long_random_string_here_at_least_32_chars

# The base URL of your application (e.g. http://localhost:3000 for local, or your domain in prod)
AUTH0_BASE_URL=http://localhost:3000

# The URL of your Auth0 tenant (e.g. https://your-tenant.us.auth0.com)
AUTH0_ISSUER_BASE_URL=https://your-tenant.us.auth0.com

# Your Auth0 application credentials
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret

# Additional Auth0 configuration
AUTH0_AUDIENCE=your_api_audience
AUTH0_SCOPE="openid profile email"

# --- Application Configuration ---
# Public URL of the application (usually same as AUTH0_BASE_URL)
APP_BASE_URL=http://localhost:3000

# URL of the backend API the frontend connects to
BACKEND_API_URL=http://host.docker.internal:4000
